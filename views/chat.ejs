		$("#menu-toggle").click(function(){
			$("#wrapper").toggleClass("toggled", 1000).promise().done(function(){
				setTimeout(function() {
	                  contentWidth = $(".content").width();
						$(".msgbox").width(contentWidth);	
	            }, 500);
			    
			});;
		});

    	$('form').submit(function(){

		  event.preventDefault();
    	  if($('#message').val().trim() !== '') {
    	  	  var msg = $('#message').val();
    	  	  $('#message').val('');
			  console.log("HERE !");
			  socket.emit('sendMessage', {
			    message: msg,
			    messageOwnerName: '<%=user.local.email%>',
			    messageOwnerId: '<%=user.id%>',
			    time: new Date(),
			    room: '<%=group.id %>'
			  });
		   }

		  
		});

    	$(window).resize(function() {
    		contentWidth = $(".content").width();
    		$(".msgbox").width(contentWidth);
    	});


		socket.on('callback', function(data) {
		  console.log(data.done);
		  // Print the data.data somewhere...
		});

		socket.on('recieve', function(data) {
		  // console.log(data);
		  if(data.joinGroup !== true) {
			  data.userId = '<%=user.id %>';
			  socket.emit('read', data);
			  if(data.messageOwnerId.toString() == '<%=user.id.toString()%>') {
			  	var temp = "<li class='myMessage float-right'><div class='msgTime float-left'>" + (new Date(data.time)).getDate() + "/" + ((new Date(data.time)).getMonth() + 1) + "<br>" + (new Date(data.time)).getHours() + ":" +(new Date(data.time)).getMinutes() + "</div><div class='msgBody-right float-left'><div class='msgName' style='text-align:right;''>" + data.messageOwnerName +"</div><b>" + data.message + "</b></div><div class='msgOwner float-left'>" + data.messageOwnerName + "</div> </li><div class='clear'></div>";
			  	$('#messages').append(temp);
			  } else {
			  	var temp = "<li class='float-left'><div class='float-left'><div class='msgOwner float-left'>" + data.messageOwnerName + "</div></div><div class='msgBody-left float-left'><div class='msgName'>" + data.messageOwnerName + "</div><b>" + data.message + "</b></div><div class='msgTime float-left'>" + (new Date(data.time)).getDate() + "/" + ((new Date(data.time)).getMonth() + 1) + "<br>" + (new Date(data.time)).getHours() + ":" +(new Date(data.time)).getMinutes() + "</div></li><div class='clear'></div>";
